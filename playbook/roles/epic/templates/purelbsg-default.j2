apiVersion: purelb.io/v1
kind: ServiceGroup
metadata:
  name: default
  namespace: purelb
spec:
  local:
    v4pools:
    - pool: {{ purelb_pool }}
      subnet: {{ purelb_subnet }}
      aggregation: {{ purelb_aggregation }}
{% if purelb_v6_pool is defined %}
    v6pools:
    - pool: {{ purelb_v6_pool }}
      subnet: {{ purelb_v6_subnet }}
      aggregation: {{ purelb_v6_aggregation }}
{% endif %}
